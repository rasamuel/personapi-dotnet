<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PersonAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill me-2"></i>PersonAPI
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Inicio</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Persona" asp-action="Index"><i class="bi bi-person"></i> Personas</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Estudio" asp-action="Index"><i class="bi bi-journal-bookmark"></i> Estudios</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Telefono" asp-action="Index"><i class="bi bi-telephone"></i> Teléfonos</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Profesion" asp-action="Index"><i class="bi bi-briefcase"></i> Profesiones</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock"></i> Privacidad</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center">
            <span class="text-muted">&copy; 2025 - PersonAPI - <a asp-controller="Home" asp-action="Privacy">Política de Privacidad</a></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
