@model personapi_dotne.Models.Entities.Estudio

@{
    ViewData["Title"] = "Eliminar Estudio";
}

<h1 class="mb-4 text-danger">Eliminar Estudio</h1>

<div class="alert alert-warning">¿Estás seguro de que deseas eliminar este estudio?</div>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Fecha</dt>
        <dd class="col-sm-9">@Model.Fecha</dd>

        <dt class="col-sm-3">Universidad</dt>
        <dd class="col-sm-9">@Model.Univer</dd>

        <dt class="col-sm-3">Cédula Persona</dt>
        <dd class="col-sm-9">@Model.CcPerNavigation?.Cc</dd>

        <dt class="col-sm-3">ID Profesión</dt>
        <dd class="col-sm-9">@Model.IdProfNavigation?.Id</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProf" />
        <input type="hidden" asp-for="CcPer" />
        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
