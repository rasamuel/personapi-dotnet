@model IEnumerable<personapi_dotne.Models.Entities.Estudio>

@{
    ViewData["Title"] = "Gestión de Estudios";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Listado de Estudios</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Nuevo Estudio
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>Fecha</th>
                <th>Universidad</th>
                <th>Cédula Persona</th>
                <th>ID Profesión</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <td>@item.Fecha</td>
                    <td>@item.Univer</td>
                    <td>@item.CcPerNavigation?.Cc</td>
                    <td>@item.IdProfNavigation?.Id</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-idProf="@item.IdProf" asp-route-ccPer="@item.CcPer" class="btn btn-sm btn-outline-primary me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-idProf="@item.IdProf" asp-route-ccPer="@item.CcPer" class="btn btn-sm btn-outline-info me-1">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-idProf="@item.IdProf" asp-route-ccPer="@item.CcPer" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
