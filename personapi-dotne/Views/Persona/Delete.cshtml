@model personapi_dotne.Models.Entities.Persona

@{
    ViewData["Title"] = "Delete Persona";
}

<h1>Delete Persona</h1>
<hr />

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Genero</dt>
        <dd class="col-sm-10">@Model.Genero</dd>

        <dt class="col-sm-2">Edad</dt>
        <dd class="col-sm-10">@Model.Edad</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Cc" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
