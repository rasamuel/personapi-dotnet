@model IEnumerable<personapi_dotne.Models.Entities.Persona>

@{
    ViewData["Title"] = "Index Persona";
}

<h1>Personas</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Género</th>
            <th>Edad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Cc</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Genero</td>
            <td>@item.Edad</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cc" class="btn btn-sm btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Cc" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Cc" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
