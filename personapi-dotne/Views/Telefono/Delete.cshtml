@model personapi_dotne.Models.Entities.Telefono

@{
    ViewData["Title"] = "Eliminar Teléfono";
}

<h1 class="mb-4 text-danger">Eliminar Teléfono</h1>

<div class="alert alert-warning">¿Estás seguro de que deseas eliminar este teléfono?</div>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Número</dt>
        <dd class="col-sm-9">@Model.Num</dd>

        <dt class="col-sm-3">Operador</dt>
        <dd class="col-sm-9">@Model.Oper</dd>

        <dt class="col-sm-3">Dueño</dt>
        <dd class="col-sm-9">@Model.Duenio</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Num" />
        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
