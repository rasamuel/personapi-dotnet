@model personapi_dotne.Models.Entities.Telefono

@{
    ViewData["Title"] = "Crear Teléfono";
}

<h2>Crear Teléfono</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Num" class="control-label"></label>
        <input asp-for="Num" class="form-control" />
        <span asp-validation-for="Num" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Oper" class="control-label"></label>
        <input asp-for="Oper" class="form-control" />
        <span asp-validation-for="Oper" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duenio" class="control-label"></label>
        <select asp-for="Duenio" class="form-control" asp-items="ViewBag.Duenio"></select>
        <span asp-validation-for="Duenio" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Crear" class="btn btn-primary" />
    </div>
</form>

<div class="mt-2">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
