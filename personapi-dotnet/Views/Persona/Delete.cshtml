@model personapi_dotne.Models.Entities.Persona

@{
    ViewData["Title"] = "Eliminar Persona";
}

<h1 class="mb-4 text-danger">Eliminar Persona</h1>

<div class="alert alert-warning">
    ¿Estás seguro de que deseas eliminar esta persona?
</div>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Apellido</dt>
        <dd class="col-sm-9">@Model.Apellido</dd>

        <dt class="col-sm-3">Género</dt>
        <dd class="col-sm-9">@Model.Genero</dd>

        <dt class="col-sm-3">Edad</dt>
        <dd class="col-sm-9">@Model.Edad</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Cc" />
        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
