@model personapi_dotne.Models.Entities.Persona

@{
    ViewData["Title"] = "Detalle de Persona";
}

<h1 class="mb-4 text-info">Detalles de Persona</h1>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Apellido</dt>
        <dd class="col-sm-9">@Model.Apellido</dd>

        <dt class="col-sm-3">Género</dt>
        <dd class="col-sm-9">@Model.Genero</dd>

        <dt class="col-sm-3">Edad</dt>
        <dd class="col-sm-9">@Model.Edad</dd>
    </dl>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Cc" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
