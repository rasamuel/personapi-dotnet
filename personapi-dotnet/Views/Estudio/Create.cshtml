@model personapi_dotne.Models.Entities.Estudio

@{
    ViewData["Title"] = "Crear Estudio";
}

<h1 class="mb-4 text-primary">Crear Estudio</h1>

<div class="card shadow p-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="IdProf" class="form-label">Profesión</label>
            <select asp-for="IdProf" class="form-control" asp-items="ViewBag.IdProf"></select>
            <span asp-validation-for="IdProf" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CcPer" class="form-label">Persona</label>
            <select asp-for="CcPer" class="form-control" asp-items="ViewBag.CcPer"></select>
            <span asp-validation-for="CcPer" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fecha" class="form-label"></label>
            <input asp-for="Fecha" type="date" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Univer" class="form-label">Universidad</label>
            <input asp-for="Univer" class="form-control" />
            <span asp-validation-for="Univer" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
