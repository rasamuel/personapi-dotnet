@model personapi_dotne.Models.Entities.Estudio

@{
    ViewData["Title"] = "Detalles de Estudio";
}

<h1 class="mb-4 text-info">Detalles de Estudio</h1>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Fecha</dt>
        <dd class="col-sm-9">@Model.Fecha</dd>

        <dt class="col-sm-3">Universidad</dt>
        <dd class="col-sm-9">@Model.Univer</dd>

        <dt class="col-sm-3">Cédula Persona</dt>
        <dd class="col-sm-9">@Model.CcPerNavigation?.Cc</dd>

        <dt class="col-sm-3">ID Profesión</dt>
        <dd class="col-sm-9">@Model.IdProfNavigation?.Id</dd>
    </dl>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-idProf="@Model.IdProf" asp-route-ccPer="@Model.CcPer" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
