@model personapi_dotne.Models.Entities.Profesion

@{
    ViewData["Title"] = "Eliminar Profesión";
}

<h1 class="mb-4 text-danger">Eliminar Profesión</h1>

<div class="alert alert-warning">¿Estás seguro de que deseas eliminar esta profesión?</div>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nom</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Des</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
